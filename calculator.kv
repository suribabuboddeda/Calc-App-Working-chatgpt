# calculator.kv
BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: display
        font_size: 32
        multiline: False
        readonly: True
    GridLayout:
        cols: 4
        spacing: 10
        padding: 10
        Button:
            text: '7'
            on_release: app.handle_button('7')
        Button:
            text: '8'
            on_release: app.handle_button('8')
        Button:
            text: '9'
            on_release: app.handle_button('9')
        Button:
            text: '/'
            on_release: app.handle_button('/')
        Button:
            text: '4'
            on_release: app.handle_button('4')
        Button:
            text: '5'
            on_release: app.handle_button('5')
        Button:
            text: '6'
            on_release: app.handle_button('6')
        Button:
            text: '*'
            on_release: app.handle_button('*')
        Button:
            text: '1'
            on_release: app.handle_button('1')
        Button:
            text: '2'
            on_release: app.handle_button('2')
        Button:
            text: '3'
            on_release: app.handle_button('3')
        Button:
            text: '-'
            on_release: app.handle_button('-')
        Button:
            text: 'C'
            on_release: app.clear_display()
        Button:
            text: '0'
            on_release: app.handle_button('0')
        Button:
            text: '='
            on_release: app.calculate_result()
        Button:
            text: '+'
            on_release: app.handle_button('+')
